<% if post.favorited_by?(current_user) %>
  <%= button_to "💔 Unlike", post_favorite_path(post, post.favorites.find_by(user: current_user)), method: :delete, class: "favorite-button", id: "favorite-button-#{post.id}", data: { turbo_action: 'replace', turbo_frame: "favorite-button-#{post.id}", turbo_stream: true } %>
<% else %>
  <%= button_to "♥️ Like", post_favorites_path(post), method: :post, class: "favorite-button", id: "favorite-button-#{post.id}", data: { turbo_action: 'replace', turbo_frame: "favorite-button-#{post.id}", turbo_stream: true } %>
<% end %>