<%= turbo_frame_tag "favorite-button-#{post.id}" do %>
  <% if post.favorited_by?(current_user) %>
    <%= button_to "💔 Unlike", post_favorite_path(post, post.favorites.find_by(user: current_user)), remote: true, method: :delete, class: "favorite-button" %>
  <% else %>
    <%= button_to "♥️ Like", post_favorites_path(post), remote: true, method: :post, class: "favorite-button" %>
  <% end %>
<% end %>